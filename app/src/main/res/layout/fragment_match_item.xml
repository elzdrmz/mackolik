<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/fragment_match_item_team_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#DDD"
            android:gravity="center|start"
            android:paddingStart="16dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_match_item_score"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Swansea"
            />

        <TextView
            android:id="@+id/fragment_match_item_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxWidth="70dp"
            android:background="#999"
            android:gravity="center"
            android:textColor="@color/white"
            android:textFontWeight="50"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/fragment_match_item_team_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_match_item_team_a"
            tools:text="2 - 1"
            />

        <TextView
            android:id="@+id/fragment_match_item_team_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#DDD"
            android:gravity="center|end"
            android:paddingEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/fragment_match_item_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Chelsea"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>